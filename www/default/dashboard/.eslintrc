{
  "extends": ["airbnb-base"],
  "ecmaFeatures": {
    "extends": [],
    "modules": true,
    "spread" : true,
    "restParams" : true,
    "impliedStrict": true,
  },
  "env": {
    "es6": true,
    "browser" : true,
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 2, { "MemberExpression": 1 }],
    "func-names": ["error", "never"],
    "prefer-template": [0],
    "no-useless-concat": [0],
    "object-shorthand": [0],
    "prefer-arrow-callback": [0],
    "no-new": [0],
    "no-else-return": [0],
    "space-before-function-paren": [0]
  }
}